<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/count_of_chance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:text="Liczba prób:"
        app:layout_constraintEnd_toStartOf="@+id/valoue_of_chance"
        app:layout_constraintTop_toBottomOf="@+id/random_number" />

    <TextView
        android:id="@+id/more_or_less"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="51dp"
        android:layout_marginTop="26dp"
        android:text="Więcej czy mniej:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/valoue_of_chance" />

    <TextView
        android:id="@+id/insert_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="26dp"
        android:text="Wproawdź liczbę"
        app:layout_constraintEnd_toStartOf="@+id/set_in_number_to_check"
        app:layout_constraintTop_toBottomOf="@+id/check_the_value" />

    <EditText
        android:id="@+id/valoue_of_chance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:ems="10"
        android:inputType="number"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toBottomOf="@+id/count_of_chance"
        app:layout_constraintStart_toStartOf="@+id/random_number"
        app:layout_constraintTop_toBottomOf="@+id/count_of_chance" />

    <EditText
        android:id="@+id/value_of_more_or_less"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:ems="10"
        android:inputType="text"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toBottomOf="@+id/more_or_less"
        app:layout_constraintStart_toEndOf="@+id/more_or_less"
        app:layout_constraintTop_toBottomOf="@+id/more_or_less" />

    <EditText
        android:id="@+id/set_in_number_to_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="number"
        android:text="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/value_of_more_or_less" />

    <Button
        android:id="@+id/check_the_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:text="Zgadnij"
        app:layout_constraintBottom_toTopOf="@+id/set_in_number_to_check"
        app:layout_constraintEnd_toStartOf="@+id/set_in_number_to_check"
        app:layout_constraintStart_toStartOf="@+id/set_in_number_to_check" />

    <Button
        android:id="@+id/random_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginTop="27dp"
        android:text="Losuj"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>