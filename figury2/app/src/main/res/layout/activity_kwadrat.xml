<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kwadratActivity">

    <ImageView
        android:id="@+id/kwadrat_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="11dp"
        android:contentDescription="@string/kwadrat_icon_view"
        android:src="@drawable/kwadrat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/kwadrat_button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="112dp"
        android:contentDescription="@string/kwadrat_button"
        android:text="Menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/kwadrat_dane_a"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/kwadrat_dane_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="18dp"
        android:text="Wartość a:"
        app:layout_constraintEnd_toStartOf="@+id/kwadrat_wartosc_a"
        app:layout_constraintTop_toBottomOf="@+id/kwadrat_icon" />

    <EditText
        android:id="@+id/kwadrat_wartosc_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:ems="10"
        android:inputType="number"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBaseline_toBaselineOf="@+id/kwadrat_dane_a"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/kwadrat_wynik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:ems="10"
        android:inputType="number"
        android:text="0"
        app:layout_constraintBaseline_toBaselineOf="@+id/kwadrat_Oblicz"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/kwadrat_Oblicz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="14dp"
        android:text="Oblicz"
        app:layout_constraintEnd_toStartOf="@+id/kwadrat_wynik"
        app:layout_constraintTop_toBottomOf="@+id/kwadrat_wartosc_a" />


</androidx.constraintlayout.widget.ConstraintLayout>